{
  "name": "ecommerce-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend/*",
    "api-gateway",
    "frontend"
  ],
  "scripts": {
    "submodules:init": "git submodule init",
    "submodules:update": "git submodule update --recursive --remote --force",
    "submodules:setup": "npm run submodules:init && npm run submodules:update",
  
    "initialize:monorepo_dev_with_db_initialization": "powershell -ExecutionPolicy Bypass -Command \"& { ./scripts/setup.ps1 -isDevServer:$true }\"",
    "initialize:db": "node scripts/initialize_database.js --isDevServer=true",
    "run_dev_server": "start-services.bat",

    "initialize_db_and_run_local_server": "initialize:monorepo_dev_with_db_initialization && npm run start_dev_server",
  
    "docker-compose:run": "docker-compose build --no-cache && docker-compose up -d",
    "docker-compose:cleanup": "docker-compose down -v --rmi all",
    "docker-compose:logs": "docker-compose logs -f",

    "k8s_deploy_with_cleanup": "powershell -ExecutionPolicy Bypass -File ./scripts/k8s-deploy.ps1",
    "k8s_deploy:fast_without_cleanup": "powershell -ExecutionPolicy Bypass -File ./scripts/k8s-deploy.ps1 -SkipCleanup"
  }
}
