{
  "name": "ecommerce-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend/*",
    "api-gateway",
    "frontend"
  ],
  "scripts": {
    "setup": "powershell -ExecutionPolicy Bypass -File ./scripts/setup.ps1",
    "start": "powershell ./scripts/start-services.ps1",
    "start:docker": "docker-compose up",
    "test": "npm run test --workspaces",
    "build": "npm run build --workspaces",
    "update-submodules": "git submodule update --remote --merge"
  }
}



